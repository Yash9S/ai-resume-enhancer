<% content_for :title, "New Job Description - AI Resume Parser" %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3>Create New Job Description</h3>
      </div>
      <div class="card-body">
        <%= form_with model: @job_description, local: true do |form| %>
          <% if @job_description.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@job_description.errors.count, "error") %> prohibited this job description from being saved:</h4>
              <ul class="mb-0">
                <% @job_description.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control", placeholder: "e.g., Senior Software Engineer - Full Stack" %>
          </div>

          <div class="mb-3">
            <%= form.label :company, class: "form-label" %>
            <%= form.text_field :company, class: "form-control", placeholder: "e.g., Tech Corp Inc." %>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :location, class: "form-label" %>
                <%= form.text_field :location, class: "form-control", placeholder: "e.g., San Francisco, CA" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :employment_type, class: "form-label" %>
                <%= form.select :employment_type, 
                    options_for_select([
                      ['Full-time', 'full_time'],
                      ['Part-time', 'part_time'],
                      ['Contract', 'contract'],
                      ['Freelance', 'freelance'],
                      ['Internship', 'internship']
                    ], @job_description.employment_type), 
                    { prompt: "Select employment type..." }, 
                    { class: "form-select" } %>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :description, "Job Description", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 8, 
                placeholder: "Paste the full job description here including responsibilities, requirements, and qualifications..." %>
            <div class="form-text">Include the complete job posting for better resume matching results.</div>
          </div>

          <div class="mb-3">
            <%= form.label :required_skills, "Required Skills (comma-separated)", class: "form-label" %>
            <%= form.text_area :required_skills, class: "form-control", rows: 3, 
                placeholder: "e.g., JavaScript, React, Node.js, Python, AWS, Docker, Git" %>
            <div class="form-text">List key technical and soft skills mentioned in the job posting.</div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :salary_range, "Salary Range (optional)", class: "form-label" %>
                <%= form.text_field :salary_range, class: "form-control", placeholder: "e.g., $80,000 - $120,000" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :experience_level, "Experience Level", class: "form-label" %>
                <%= form.select :experience_level, 
                    options_for_select([
                      ['Entry Level (0-2 years)', 'entry'],
                      ['Mid Level (2-5 years)', 'mid'],
                      ['Senior Level (5-8 years)', 'senior'],
                      ['Lead/Principal (8+ years)', 'lead']
                    ], @job_description.experience_level), 
                    { prompt: "Select experience level..." }, 
                    { class: "form-select" } %>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "Cancel", job_descriptions_path, class: "btn btn-outline-secondary me-md-2" %>
            <%= form.submit "Create Job Description", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Information Card -->
    <div class="card mt-4">
      <div class="card-header">
        <h5><i class="fas fa-info-circle"></i> Why create job descriptions?</h5>
      </div>
      <div class="card-body">
        <ul class="mb-0">
          <li><strong>Better Matching:</strong> AI can tailor your resume to specific job requirements</li>
          <li><strong>Skill Analysis:</strong> Identify gaps between your skills and job requirements</li>
          <li><strong>Keyword Optimization:</strong> Ensure your resume includes relevant keywords</li>
          <li><strong>Multiple Versions:</strong> Create targeted resumes for different positions</li>
        </ul>
        
        <div class="alert alert-success mt-3">
          <strong>Tip:</strong> Save job descriptions for positions you're interested in to create tailored resume versions for each application.
        </div>
      </div>
    </div>
  </div>
</div>