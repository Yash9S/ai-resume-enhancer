<% content_for :title, "Edit Resume - #{@resume.title}" %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3>Edit Resume</h3>
      </div>
      <div class="card-body">
        <%= form_with model: @resume, local: true, multipart: true do |form| %>
          <% if @resume.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@resume.errors.count, "error") %> prohibited this resume from being saved:</h4>
              <ul class="mb-0">
                <% @resume.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control", placeholder: "e.g., Software Engineer Resume - John Doe" %>
          </div>

          <div class="mb-3">
            <%= form.label :file, "Replace Resume File (Optional)", class: "form-label" %>
            <%= form.file_field :file, class: "form-control", accept: ".pdf,.docx" %>
            <div class="form-text">
              Current file: <strong><%= @resume.file_name %></strong><br>
              Leave empty to keep the current file. Supported formats: PDF, DOCX. Maximum file size: 10MB
            </div>
          </div>

          <% if @resume.extracted_content.present? %>
            <div class="mb-3">
              <%= form.label :extracted_content, "Extracted Content", class: "form-label" %>
              <%= form.text_area :extracted_content, class: "form-control", rows: 15 %>
              <div class="form-text">Edit the extracted content from your resume.</div>
            </div>
          <% end %>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "Cancel", @resume, class: "btn btn-outline-secondary me-md-2" %>
            <%= form.submit "Update Resume", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>