# syntax=docker/dockerfile:1
# Development Dockerfile for AI Resume Parser

ARG RUBY_VERSION=3.4.6
FROM docker.io/library/ruby:$RUBY_VERSION-slim AS base

# Rails app lives here
WORKDIR /rails

# Install base packages and development dependencies
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    curl \
    git \
    libjemalloc2 \
    libvips \
    postgresql-client \
    libpq-dev \
    pkg-config \
    python3 \
    python3-pip \
    libyaml-dev \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Install Node.js for JavaScript dependencies
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs

# Set development environment
ENV RAILS_ENV="development" \
    BUNDLE_PATH="/usr/local/bundle"

# Copy Gemfile and optionally Gemfile.lock
COPY Gemfile ./
COPY Gemfile.loc[k] ./

# Install gems
RUN bundle install

# Copy the rest of the application
COPY . .

# Create directories for uploads and cache
RUN mkdir -p storage tmp/cache tmp/pids tmp/sockets

# Set file permissions
RUN chmod +x bin/rails bin/rake

# Expose port 3000
EXPOSE 3000

# Default command
CMD ["rails", "server", "-b", "0.0.0.0", "-p", "3000"]