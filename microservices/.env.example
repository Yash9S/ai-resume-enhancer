# Environment variables for microservices development
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_resume_parser_development

# Redis
REDIS_URL=redis://localhost:6379

# API Keys (Optional - services will fallback gracefully)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Service URLs
AI_EXTRACTION_SERVICE_URL=http://localhost:8001
BUSINESS_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Rails
RAILS_MASTER_KEY=your_rails_master_key_here
JWT_SECRET=your_jwt_secret_here
RAILS_ENV=development

# Ollama (Local AI)
OLLAMA_BASE_URL=http://localhost:11434

# Logging
LOG_LEVEL=INFO

# Development settings
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true